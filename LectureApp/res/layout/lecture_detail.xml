<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right|center"
    android:background="@drawable/item_view_background"
    android:orientation="vertical"
    android:textAlignment="center" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:id="@+id/detail_relativeLayout0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/item_background"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/detail_relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/detail_lecture_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="讲座名称"
                    android:textColor="@color/item_content"
                    android:textSize="16dip" />

                <ImageView
                    android:id="@+id/detail_line_1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/detail_lecture_name"
                    android:layout_marginTop="3dp"
                    android:background="@color/item_line" />

                <TextView
                    android:id="@+id/detail_lecture_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_line_1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:text="时间："
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/detail_lecture_addr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_lecture_time"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:text="地点："
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/detail_lecture_speaker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_lecture_addr"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:text="讲者："
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/detail_lecture_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_lecture_speaker"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:text="标签："
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />

                <ImageView
                    android:id="@+id/detail_line_2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/detail_lecture_label"
                    android:background="@color/item_line" />

                <TextView
                    android:id="@+id/about_speaker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_line_2"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:text="讲者信息："
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/more_information"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/about_speaker"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:text="讲者信息："
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />

                <ImageView
                    android:id="@+id/detail_line_3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/more_information"
                    android:background="@color/item_line" />

                <TextView
                    android:id="@+id/detail_lecture_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_line_3"
                    android:layout_margin="5dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="评论（欢迎吐槽）"
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />

                <ImageView
                    android:id="@+id/detail_line_4"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/detail_lecture_comment"
                    android:background="@color/item_line" />
                
                <TextView
                    android:id="@+id/blank"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_line_4"
                    android:layout_margin="5dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="你能看到我吗？你肯定看不到"
                    android:textColor="@color/item_content"
                    android:textSize="15dip" />
                
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:animateLayoutChanges="true"
        android:background="#000000" >

        <LinearLayout
            android:id="@+id/detail_linearlayout_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:clickable="true"
            android:gravity="right|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/detail_share_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/share"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/detail_share_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="分享"
                android:textAlignment="gravity"
                android:textColor="@color/item_content"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_line_5"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/item_line"
            android:clickable="false"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/detail_linearlayout_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/detail_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/comment"
                android:clickable="true"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/detail_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/item_content"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_line_6"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/item_line"
            android:clickable="false"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/detail_linearlayout_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/detail_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/like"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/detail_like_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="点赞"
                android:textColor="@color/item_content"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_line_7"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="17dp"
            android:background="@color/item_line"
            android:clickable="false"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/detail_linearlayout_remind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <ImageView
                android:id="@+id/detail_remind_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/remind"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/detail_remind_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/item_content"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>