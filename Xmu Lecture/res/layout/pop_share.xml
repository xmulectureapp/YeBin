<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_dialog"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#00000000"
	android:gravity="center_horizontal"
	android:orientation="vertical" >
	
    
     <RelativeLayout
	    
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#00000000"
		android:layout_above="@+id/pop_layout"
		android:gravity="center_horizontal"
		android:orientation="vertical" >
		
       <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/logo_textView"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_white" />
        
        <TextView
            android:id="@+id/logo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一则讲座，改变一生"
            android:textColor="@color/top_title_color"
            android:textStyle="bold" />
        
	</RelativeLayout>
        
	
	
	<LinearLayout
		android:id="@+id/pop_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="#d2ffffff"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:paddingBottom="5dp"
		android:weightSum="5" >
		
		
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignParentTop="true"
			android:background="@color/item_line" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:layout_weight="1"
			android:orientation="vertical" >

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_marginTop="5dp"
				android:gravity="center"
				android:paddingBottom="3dp"
				android:paddingTop="3dp"
				android:text="分享"
				android:textColor="@color/item_background"
				android:textSize="19sp" />
			
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="90dp"
			android:layout_weight="3"
			android:orientation="horizontal"
			android:weightSum="3" >

			<RelativeLayout
			    android:id="@+id/wechat_share"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="10dp" >

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="7dp"
					android:layout_marginRight="5dp"
					android:layout_marginTop="10dp"
					android:scaleType="center"
					android:src="@drawable/wechat_ico" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerInParent="true"
					android:text="微信好友"
					android:textColor="@color/item_title_green" />
				
			</RelativeLayout>

			<RelativeLayout
			    android:id="@+id/wechat_circle_share"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="10dp" >

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_marginTop="10dp"
					android:scaleType="center"
					android:src="@drawable/wechat_circle_ico" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerInParent="true"
					android:text="微信朋友圈"
					android:textColor="@color/item_title_orange" />

			</RelativeLayout>

			<RelativeLayout
			    android:id="@+id/weibo_share"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="10dp" >

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_marginTop="10dp"
					android:scaleType="center"
					android:src="@drawable/weibo_ico" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerInParent="true"
					android:text="新浪微博"
					android:textColor="@color/item_title_blue" />
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginTop="10dp"
			android:layout_weight="1"
			android:orientation="vertical" >

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignParentTop="true"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:background="@color/item_line" />
			
			<ImageView
			    android:id="@+id/share_exit"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginTop="3dp"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="3dp"
			    android:paddingTop="3dp"
			    android:scaleType="center"
			    android:src="@drawable/pop_exit" />
			
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>