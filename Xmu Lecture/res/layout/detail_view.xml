<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailview_linearLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="right|center"
	android:orientation="vertical"
	android:textAlignment="center" >
	

	<RelativeLayout
		android:id="@+id/detail_main"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="right|center"
		android:background="@drawable/item_view_background"
		android:orientation="vertical"
		android:textAlignment="center" >

		

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:background="@color/item_background"
			android:orientation="vertical"
			android:paddingTop="50dp" >

			<ScrollView
				android:id="@+id/detail_scrollview"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:scrollbars="none" >

				<RelativeLayout
					android:id="@+id/detail_relativeLayout1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_alignParentLeft="true"
					android:orientation="vertical" >

					<RelativeLayout
						android:id="@+id/detail_relativeLayout2"
						android:layout_width="fill_parent"
						android:layout_height="match_parent"
						android:layout_alignParentLeft="true"
						android:layout_marginBottom="1dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:layout_marginTop="5dp"
						android:orientation="vertical" >

						<RelativeLayout
							android:id="@+id/detail_relativeLayout1"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_gravity="right|center"
							android:orientation="vertical"
							android:textAlignment="center" >

							<TextView
								android:id="@+id/detail_lecture_name"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
								android:layout_marginRight="5dp"
								android:layout_marginTop="5dp"
								android:gravity="center"
								android:text="主题:"
								android:textColor="@color/main_menu_pressed"
								android:textSize="18sp"
								android:textStyle="bold|italic" />

							<ImageView
								android:id="@+id/detail_line"
								android:layout_width="fill_parent"
								android:layout_height="1dp"
								android:layout_below="@+id/detail_lecture_name"
								android:layout_margin="3dp"
								android:layout_marginTop="3dp"
								android:background="@color/item_line" />

							<TextView
								android:id="@+id/detail_comment_content"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_below="@+id/detail_line"
								android:layout_margin="3dp"
								android:layout_marginBottom="3dp"
								android:layout_marginLeft="5dp"
								android:layout_marginRight="5dp"
								android:layout_marginTop="3dp"
								android:text="时间："
								android:textColor="@color/item_content"
								android:textSize="15sp"
								android:textStyle="italic|bold" />

							<TextView
								android:id="@+id/detail_lecture_addr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_below="@+id/detail_comment_content"
								android:layout_margin="3dp"
								android:layout_marginBottom="3dp"
								android:layout_marginLeft="5dp"
								android:layout_marginRight="5dp"
								android:text="地点："
								android:textColor="@color/item_content"
								android:textSize="15sp"
								android:textStyle="italic|bold" />

							<TextView
								android:id="@+id/detail_lecture_speaker"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_below="@+id/detail_lecture_addr"
								android:layout_margin="3dp"
								android:layout_marginLeft="5dp"
								android:layout_marginRight="5dp"
								android:text="讲者："
								android:textColor="@color/item_content"
								android:textSize="15sp"
								android:textStyle="italic|bold" />

							<TextView
								android:id="@+id/detail_lecture_label"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_below="@+id/detail_lecture_speaker"
								android:layout_margin="3dp"
								android:layout_marginBottom="4dp"
								android:layout_marginLeft="5dp"
								android:layout_marginRight="5dp"
								android:text="标签："
								android:textColor="@color/item_content"
								android:textSize="15sp"
								android:textStyle="italic|bold" />

							<ImageView
								android:id="@+id/detail_line_2"
								android:layout_width="fill_parent"
								android:layout_height="1dp"
								android:layout_below="@+id/detail_lecture_label"
								android:background="@color/item_line" />

							<TextView
								android:id="@+id/about_speaker"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_below="@+id/detail_line_2"
								android:layout_margin="3dp"
								android:layout_marginLeft="5dp"
								android:layout_marginRight="5dp"
								android:text="讲者信息："
								android:textColor="@color/item_content"
								android:textSize="15sp"
								android:textStyle="italic|bold" />

							<ImageView
								android:layout_width="fill_parent"
								android:layout_height="1dp"
								android:layout_below="@+id/about_speaker"
								android:background="@color/item_line" />

							<TextView
								android:id="@+id/more_information"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_below="@+id/about_speaker"
								android:layout_margin="3dp"
								android:layout_marginLeft="5dp"
								android:layout_marginRight="5dp"
								android:text="背景资料："
								android:textColor="@color/item_content"
								android:textSize="15sp"
								android:textStyle="italic|bold" />
						</RelativeLayout>

						<RelativeLayout
							android:id="@+id/detail_relativeLayout3"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_alignParentLeft="true"
							android:layout_below="@+id/detail_relativeLayout1"
							android:layout_marginBottom="1dp"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:layout_marginTop="5dp"
							android:orientation="vertical" >

							<ImageView
								android:id="@+id/detail_line_3"
								android:layout_width="fill_parent"
								android:layout_height="1dp"
								android:background="@color/item_line" />

							<TextView
								android:id="@+id/detail_lecture_comment"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_below="@+id/detail_line_3"
								android:layout_margin="5dp"
								android:layout_marginTop="100dp"
								android:gravity="center"
								android:text="评论（欢迎吐槽）"
								android:textColor="@color/item_content"
								android:textSize="15sp"
								android:textStyle="bold" />
						</RelativeLayout>

						<LinearLayout
							android:id="@+id/comments_box"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_alignParentBottom="true"
							android:layout_alignParentLeft="true"
							android:layout_below="@+id/detail_relativeLayout3"
							android:animateLayoutChanges="true"
							android:background="@color/item_transparent"
							android:orientation="vertical"
							android:paddingBottom="70dp" >
						</LinearLayout>
					</RelativeLayout>
				</RelativeLayout>
			</ScrollView>
		</RelativeLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="36dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:animateLayoutChanges="true"
			android:background="@drawable/bottom_bar4" >

			<LinearLayout
				android:id="@+id/detail_linearlayout_share"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center|right"
				android:layout_weight="1"
				android:background="#00000000"
				android:clickable="true"
				android:gravity="right|center"
				android:orientation="horizontal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp" >

				<ImageView
					android:id="@+id/detail_share_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="1dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:background="@drawable/share"
					android:gravity="center_horizontal"
					android:paddingTop="10dp" />

				<TextView
					android:id="@+id/detail_share_text"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="分享"
					android:textAlignment="gravity"
					android:textColor="@color/item_content"
					android:textSize="12sp" />
			</LinearLayout>

			<ImageView
				android:id="@+id/detail_line_5"
				android:layout_width="1dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:background="@color/item_line"
				android:clickable="false"
				android:gravity="center_horizontal" />

			<LinearLayout
				android:id="@+id/detail_linearlayout_comment"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#00000000"
				android:gravity="center_horizontal"
				android:orientation="horizontal"
				android:paddingLeft="5dp"
				android:paddingRight="5dp" >

				<ImageView
					android:id="@+id/detail_comment_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="1dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					android:background="@drawable/comment"
					android:clickable="true"
					android:gravity="center_horizontal" />

				<TextView
					android:id="@+id/detail_comment_text"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="评论"
					android:textColor="@color/item_content"
					android:textSize="12sp" />
			</LinearLayout>

			<ImageView
				android:id="@+id/detail_line_6"
				android:layout_width="1dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:background="@color/item_line"
				android:clickable="false"
				android:gravity="center_horizontal" />

			<LinearLayout
				android:id="@+id/detail_linearlayout_like"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/detail_item_selector"
				android:gravity="center_horizontal"
				android:orientation="horizontal"
				android:paddingLeft="5dp"
				android:paddingRight="5dp" >

				<ImageView
					android:id="@+id/detail_like_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="1dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:background="@drawable/like"
					android:gravity="center_horizontal" />

				<TextView
					android:id="@+id/detail_like_text"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="点赞"
					android:textColor="@color/item_content"
					android:textSize="12sp" />
			</LinearLayout>

			<ImageView
				android:id="@+id/detail_line_7"
				android:layout_width="1dp"
				android:layout_height="20dp"
				android:layout_gravity="center"
				android:background="@color/item_line"
				android:clickable="false"
				android:gravity="center_horizontal" />

			<LinearLayout
				android:id="@+id/detail_linearlayout_remind"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center|left"
				android:layout_weight="1"
				android:background="#00000000"
				android:gravity="left|center"
				android:orientation="horizontal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp" >

				<ImageView
					android:id="@+id/detail_remind_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="1dp"
					android:layout_marginRight="10dp"
					android:background="@drawable/remind"
					android:gravity="center_horizontal" />

				<TextView
					android:id="@+id/detail_remind_text"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="收藏"
					android:textColor="@color/item_content"
					android:textSize="12sp" />
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
	<RelativeLayout
			android:id="@+id/detail_top"
			android:layout_width="fill_parent"
			android:layout_height="47dp"
			android:background="@color/top_background_color"
			android:gravity="center_vertical"
			android:orientation="vertical" >

			<!-- 添加主界面的 -->

			<ImageView
				android:id="@+id/detail_header_bg"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="#58aef0" />

			<TextView
				android:id="@+id/detail_header_title"
				style="@style/A1_Font"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_centerInParent="true"
				android:ellipsize="end"
				android:gravity="center"
				android:singleLine="true"
				android:text="讲座详情"
				android:textColor="@color/top_title_color"
				android:textSize="20sp"
				android:textStyle="bold" />

			<LinearLayout
			    android:id="@+id/detail_header_left_linearLayout"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:paddingRight="20dp" >

				<ImageView
					android:id="@+id/detail_header_left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="5dp"
					android:background="@drawable/back_selector"
					android:gravity="center"
					android:includeFontPadding="false"
					android:paddingRight="16dp"
					android:scaleType="matrix" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_alignParentRight="true" >

				<ImageView
					android:id="@+id/detail_header_right"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_gravity="center"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:gravity="center"
					android:includeFontPadding="false"
					android:scaleType="matrix"
					android:src="@drawable/back_none" />
			</LinearLayout>
		</RelativeLayout> <!-- 用于添加header View -->
	

</RelativeLayout>