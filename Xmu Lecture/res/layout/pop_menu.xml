<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_dialog"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#00000000"
	android:gravity="center_horizontal"
	android:orientation="vertical" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pop_layout"
        android:background="@color/item_transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
		
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/logo_textView"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_red" />
        
        <TextView
            android:id="@+id/logo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一则讲座，改变一生"
            android:textColor="#ff5648"
            android:textStyle="bold" />
        
	</RelativeLayout>
	
	<LinearLayout
	    android:id="@+id/pop_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="#c7ffffff"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    android:weightSum="4" >
		
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignParentTop="true"
			android:background="@color/item_line" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="90dp"
			android:layout_weight="3"
			android:orientation="horizontal"
			android:weightSum="3" >

			<RelativeLayout
			    android:id="@+id/about_app"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="10dp" >

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_above="@+id/textView1"
					android:scaleType="center"
					android:src="@drawable/about_app" />

				<TextView
					android:id="@+id/textView1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerInParent="true"
					android:text="关于应用"
					android:textColor="@color/item_title_green" />
				
			</RelativeLayout>

			<RelativeLayout
			    android:id="@+id/about_xmu_lecture"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="10dp" >

				<TextView
					android:id="@+id/textView2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerInParent="true"
					android:text="关于讲座网"
					android:textColor="@color/item_title_orange" />

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_above="@+id/textView2"
					android:layout_centerHorizontal="true"
					android:scaleType="center"
					android:src="@drawable/about_xmu_lecture" />
			</RelativeLayout>

			<RelativeLayout
			    android:id="@+id/about_author"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="10dp" >

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_above="@+id/textView3"
					android:scaleType="center"
					android:src="@drawable/about_author" />
				
				<TextView
					android:id="@+id/textView3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_centerInParent="true"
					android:text="关于作者"
					android:textColor="@color/item_title_blue" />
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="55dp"
		    android:layout_marginTop="10dp"
		    android:layout_weight="1"
		    android:background="#b7ffffff"
		    android:orientation="vertical"
		    android:paddingBottom="5dp" >

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignParentTop="true"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:background="@color/item_line" />
			
			<ImageView
			    android:id="@+id/pop_exitImageView"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginTop="3dp"
			    android:background="@drawable/popwindow_selector"
			    android:paddingBottom="3dp"
			    android:paddingTop="3dp"
			    android:scaleType="center"
			    android:src="@drawable/pop_exit" />
			
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>