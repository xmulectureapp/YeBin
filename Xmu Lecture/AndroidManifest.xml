<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lecture.lectureapp"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
     <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_launcher"
        android:label="@string/app_name" android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:name="com.lecture.lectureapp.Appstart"
            android:label="@string/app_name" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lecture.lectureapp.MainView"/>
        <activity
            android:name="com.lecture.lectureapp.Guide"/>
        <activity
            android:name="com.lecture.lectureapp.RefreshCenter"/>
        <activity
            android:name="com.lecture.lectureapp.DetailView"/>
        <activity
            android:name="com.lecture.lectureapp.CommentView"/>
        
        <activity
            android:name="com.lecture.lectureapp.SubmitCenter"/>
        
        <activity
            android:name="com.lecture.lectureapp.AboutPages"/>
        
    <activity
            android:name=".wxapi.WXEntryActivity"
            android:label="厦大讲座"
            android:exported="true" />
    
        
    </application>
    

</manifest>
